<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title></title>
  </head>
  <body>
    <h1>Fruits index page</h1>
    <form action="/fruits/new" method="get">
      <button type="submit">Create New Fruit</button>
    </form>
    <table>
      <thead>
        <tr>
          <td>Name</td>
          <td>Color</td>
          <td>Edibility</td>
          <td>Delete Entry</td>
          <td>Edit Entry</td>
        </tr>
      </thead>
      <tbody>
        <% fruits.map((el, i) => { %>
          <tr>
            <td>
              <a href="/fruits/<%=el._id%>">
              <%=el.name %></a>
            </td>
            <td><%=el.color %></td>
            <td><%=el.readyToEat %></td>
            <td>
              <form action="/fruits/<%=el._id%>?_method=DELETE" method="post">
                <input type="submit" value="Delete"/>
              </form>
            </td>
            <td>
              <form action="/fruits/<%=el._id%>/edit" method="get">
                <input type="submit" value="Edit"/>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>